<!-- "form_for" is a form helper to generate a form -->
<!-- it also connect a form with model object -->
<!-- f is called "form builder" and generates HTML -->

<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>

	<table class="table">
		<thead>
			<tr>
				<th>名前</th>
				<th>メッセージ</th>
                <th></th>
                <th></th>
            </tr>
		</thead>
		<tbody>
            <% @messages.each do |message| %>
	    		<tr>
		    	    <th><span class="label label-info"><%= message.name %></span></th>
                    <th><%= message.body %></th>
                    <th>(<%= link_to "edit", edit_message_path(message) %></th>
                    <th><%= link_to "destroy", message, method: :delete, data: {confirm: '削除してもよろしいですか？'} %>)</th>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<% #部分テンプレートを読み込む %>
<%= render 'form' %>
